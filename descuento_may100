#include <iostream>

using namespace std;

int main(){
    int min=100;
    float compra, descuento, total;
    cout<<"ingrese el valor de la compra: ";
    cin>>compra;
    if(compra>min){
        descuento=compra*0.15;
        cout<<"Descuento de :"<<descuento<<" bs."<<endl;
        total=compra-descuento;
        cout<<"Total a pagar: "<<total<<" bs.";
    }
    else {
        cout<<"Descuento no aplicable";
    }

    return 0;
}
